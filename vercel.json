{
    "version": 2,
    "builds": [
        {
            "src": "app.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/app.js"
        },
        {
            "src": "/(.*)",
            "dest": "/app.js"
        }
    ],
    "env": {
        "NODE_ENV": "production",
        "PORT": "3001"
    },
    "build": {
        "env": {
            "SUPABASE_URL": "@supabase_url",
            "SUPABASE_KEY": "@supabase_key",
            "JWT_SECRET": "@jwt_secret",
            "JWT_REFRESH_SECRET": "@jwt_refresh_secret"
        }
    }
}